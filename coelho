
#include <stdio.h>

int main()
{
int geracao;
    int totalCoelhos = 0;
    int coelhosAtual = 1;

    printf("Digite o número da geração: ");
    scanf("%d", &geracao);

    for (int i = 1; i <= geracao; i++) {
        totalCoelhos += coelhosAtual;
        coelhosAtual *= 2;
        printf("Total de coelhos até a geração %d: %d\n", geracao, totalCoelhos);
    }

  
}
